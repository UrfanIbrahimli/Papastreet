@model IEnumerable<PapaSreet.AdminUI.Models.CustomerPhoneViewModel>
@using PapaStreet.Common.Resources
@if (Model.Count() < 3)
{
    <div class="form-group">
        <label>@UI.Phone <span class="text-danger">*</span></label>
        <div class="input-group-append" id="addBtn">
            <button type="button" class="input-group-text" onclick="AddCustomerPhone()">+</button>
        </div>
    </div>
}
<div id="customerphonesRow">
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            Html.RenderPartial("Partials/CustomerPhonePartials/_CustomerPhoneFormPartial", item);
        }
    }
    else
    {
        Html.RenderPartial("Partials/CustomerPhonePartials/_CustomerPhoneFormPartial", new PapaSreet.AdminUI.Models.CustomerPhoneViewModel());
    }
</div>