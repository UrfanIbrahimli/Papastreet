@model PapaStreet.WebUI.ViewModels.AnnouncementCommonViewModel
@using PapaStreet.Common.Resources
<div class="card inner-side-bar">
    <div class="card-body">
        <h5 class="card-title mb-3">@UI.PropertyType</h5>
        <ul class="sidebar-card-list">
            @foreach (var item in Model.PropertyTypes)
            {
                <li><a href="@Url.Action("Index","Announcement",new { @PropertyTypes=item.Id})">
                    <i class="mdi mdi-chevron-right">
                        </i> @item.Name 
                    <span class="sidebar-badge">@Model.AllAnnouncements.Where(x => x.PropertyTypeId == item.Id).Count()</span>
                    </a>
                 </li>
            }
        </ul>
    </div>
</div>
