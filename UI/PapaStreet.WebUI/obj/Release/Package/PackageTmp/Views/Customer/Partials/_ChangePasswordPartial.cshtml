@model PapaStreet.WebUI.Models.CustomerModel
@using PapaStreet.Common.Resources

<h3>@UI.ChangePassword</h3>
<div class="padding-top-2x mt-2 hidden-lg-up"></div>
@using (Ajax.BeginForm("ChangePassword", "Customer",
    new AjaxOptions() { OnBegin = "OnLoading", OnSuccess = "OnSuccessChangePassword", OnFailure = "OnFailure" },
    new { @class = "row", id="myform" }))
{

    @Html.AntiForgeryToken()
    @*@Html.ValidationSummary(true)*@
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.Status)

    <div class="col-md-12">
        <div class="form-group">
            <label class="control-label">@UI.Password <span class="text-danger">*</span></label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
    </div>

    <div class="col-md-12">
        <div class="form-group">
            <label class="control-label">@UI.NewPassword <span class="text-danger">*</span></label>
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.NewPassword)
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            <label class="control-label">@UI.ConfirmPassword <span class="text-danger">*</span></label>
            @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ConfirmNewPassword)
        </div>
    </div>
    <div class="col-12">
        <hr class="mt-2 mb-3">
        <div class="d-flex flex-wrap justify-content-between align-items-center">
            <button class="btn btn-primary margin-right-none" type="submit">@UI.Confirm</button>
        </div>
    </div>
}